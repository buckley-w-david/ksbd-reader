{
  "manifest_version": 2,
  "name": "Kill 6 Billion Demons reader",
  "version": "2.0.0",

  "description": "Convert killsixbilliondemons.com into a basic reader SPA",

  "icons": {
    "48": "icons/ksbd-48.png"
  },

  "browser_action": {
      "default_icon": "icons/ksbd-48.png",
      "default_title": "KSBD Reader"
  },

  "permissions": [
    "browsingData",
    "activeTab",
    "*://killsixbilliondemons.com/*"
  ],

  "background": {
    "scripts": ["reader-background.js"]
  },

  "web_accessible_resources": ["view/*"]
}
